{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": ["dom", "es2020"],
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"strict": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"target": "es2021",
		"types": ["jest", "node"]
	},
	"include": ["functions", "scripts"]
}
