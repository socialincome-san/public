{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"module": "esnext",
		"lib": ["dom", "es2020"],
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"target": "es2017",
		"types": ["jest", "node"]
	},
	"include": ["/**/*"]
}
