<mjml>
    <mj-head>
        <mj-preview>{{ i18n 'preview' }}</mj-preview>
        <mj-title>{{ i18n 'title' }}</mj-title>
<!-- TODO ahee: add once fonts is deployed-->
<!-- <mj-font name="Unica77" href="https://socialincome.org/dist/assets/css/fonts.css"/>-->
        <mj-attributes>
            <mj-all font-family="helvetica, arial"/>
        </mj-attributes>
    </mj-head>
    <mj-body>
        <!-- Header -->
        <mj-section>
            <mj-column>
                <mj-image
                        href="https://socialincome.org"
                        title="Social Income"
                        name="Social Income"
                        alt="Social Income"
                        width="300px"
                        src="https://socialincome.org/assets/img/email/logo_500px.png"/>

            </mj-column>
        </mj-section>
        <!-- Main -->
        <mj-section>
            {{> @partial-block }}
        </mj-section>
        <!-- Footer Divider -->
        <mj-section padding-top=0 padding-bottom=0>
            <mj-column>
                <mj-divider border-width="2px" border-style="solid" border-color="lightgrey"/>
            </mj-column>
        </mj-section>
        <!-- Footer -->
        <mj-section padding-top=0 padding-bottom=0>
            <mj-group>
                <mj-column vertical-align="middle" width="50%">
                    <mj-image
                            href="https://socialincome.org"
                            title="Social Income"
                            name="Social Income"
                            alt="Social Income"
                            width="50px"
                            align="left"
                            src="https://socialincome.org/assets/img/email/icon_si_100px.png"/>
                </mj-column>
                <mj-column vertical-align="middle" width="10%">
                    <mj-image
                            href="https://twitter.com/so_income"
                            title="Twitter"
                            name="Twitter"
                            alt="Twitter"
                            width="30px"
                            padding=0
                            align="right"
                            src="https://socialincome.org/assets/img/email/b_twitter@2x.png"/>
                </mj-column>
                <mj-column vertical-align="middle" width="10%">
                    <mj-image
                            href="https://www.facebook.com/socialincome.org"
                            title="Facebook"
                            name="Facebook"
                            alt="Facebook"
                            width="30px"
                            padding=0
                            align="right"
                            src="https://socialincome.org/assets/img/email/b_facebook@2x.png"/>

                </mj-column>
                <mj-column vertical-align="middle" width="10%">
                    <mj-image
                            href="https://www.linkedin.com/company/socialincome/"
                            title="Linkedin"
                            name="Linkedin"
                            alt="Linkedin"
                            width="30px"
                            padding=0
                            align="right"
                            src="https://socialincome.org/assets/img/email/b_linkedin@2x.png"/>

                </mj-column>
                <mj-column vertical-align="middle" width="10%">
                    <mj-image
                            href="https://instagram.org/so_income"
                            title="Instagram"
                            name="Instagram"
                            alt="Instagram"
                            width="30px"
                            padding=0
                            align="right"
                            src="https://socialincome.org/assets/img/email/b_instagram@2x.png"/>
                </mj-column>
            </mj-group>
        </mj-section>
        <mj-section padding-top=0>
            <mj-column>
                <mj-text>Social Income · Zweierstrasse 103 · CH-8003 Zürich</mj-text>
            </mj-column>
        </mj-section>
    </mj-body>
</mjml>