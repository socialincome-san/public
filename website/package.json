{
	"name": "@socialincome/website",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"serve": "npm run build-paths && npm run openapi:generate && next dev -p 3000",
		"build-paths": "tsx scripts/generate-paths.ts",
		"prebuild": "npm run build-paths",
		"build": "next build",
		"postbuild": "npm run openapi:generate && npm run copy-static-files",
		"prestart": "npm run db:migrate:deploy",
		"start": "npm-run-all -p start:emulators start:web",
		"start:emulators": "firebase emulators:start --only auth,storage --project demo-social-income-local --config ../firebase.json --import ../seed",
		"start:web": "PORT=3000 HOSTNAME=localhost node .next/standalone/website/server.js",
		"test:unit": "jest --forceExit --roots src/",
		"test:e2e": "playwright test",
		"test:e2e:update": "playwright test --update-snapshots",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:verbose": "DEBUG=pw:webserver npm run test:e2e",
		"test:e2e:ui:verbose": "DEBUG=pw:webserver npm run test:e2e:ui",
		"copy-static-files": "cp -r public .next/standalone/website && cp -r .next/static .next/standalone/website/.next/",
		"emulator:start": "firebase emulators:start --project demo-social-income-local --only firestore,auth --config ../firebase.json --import ../seed",
		"lint": "eslint .",
		"openapi:generate": "next-openapi-gen generate",
		"typecheck": "tsc --noEmit",
		"db:generate": "prisma generate",
		"db:migrate:deploy": "prisma migrate deploy",
		"db:migrate:dev": "prisma migrate dev",
		"db:migrate:reset": "prisma migrate reset --force",
		"db:migrate:status": "prisma migrate status",
		"db:migrate:create": "prisma migrate dev --create-only",
		"db:introspect": "prisma db pull",
		"db:seed": "prisma db seed",
		"db:studio": "npm run prisma:env-local -- studio",
		"db:up": "docker compose up -d postgres",
		"db:down": "docker compose down",
		"check:unused": "knip --config knip.config.ts",
		"storyblok:login": "dotenv -e .env.local -- sh -c 'storyblok login --token $STORYBLOK_PERSONAL_ACCESS_TOKEN --region eu'",
		"storyblok:pull": "dotenv -e .env.local -- sh -c 'storyblok components pull --space $STORYBLOK_SPACE_ID --path src/generated/storyblok'",
		"storyblok:types": "dotenv -e .env.local -- sh -c 'storyblok types generate --space $STORYBLOK_SPACE_ID --path src/generated/storyblok'",
		"storyblok:generate": "npm run storyblok:login && npm run storyblok:pull && npm run storyblok:types"
	},
	"dependencies": {
		"@heroicons/react": "^2.1.5",
		"@lottiefiles/react-lottie-player": "^3.5.4",
		"@mux/mux-video-react": "^0.12.0",
		"@prisma/client": "7.3.0",
		"@prisma/adapter-pg": "^7.3.0",
		"@radix-ui/react-avatar": "^1.1.10",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@scalar/api-reference-react": "^0.7.55",
		"@sendgrid/mail": "^8.1.3",
		"@sentry/nextjs": "^10.25.0",
		"@storyblok/js": "^4.4.4",
		"@storyblok/react": "^5.4.21",
		"@tanstack/react-table": "^8.21.3",
		"@types/js-cookie": "^3.0.6",
		"@vimeo/player": "^2.24.0",
		"@xmldom/xmldom": "^0.8.10",
		"accept-language-parser": "^1.5.0",
		"class-variance-authority": "^0.7.1",
		"classnames": "^2.5.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"country-flag-icons": "^1.6.4",
		"date-fns": "^4.1.0",
		"dotenv-cli": "^11.0.0",
		"firebase": "^11.9.1",
		"firebase-admin": "^12.7.0",
		"i18next": "^23.15.2",
		"i18next-resources-to-backend": "^1.2.1",
		"isomorphic-dompurify": "^2.33.0",
		"js-cookie": "^3.0.5",
		"lodash": "^4.17.21",
		"lucide-react": "^0.539.0",
		"luxon": "^3.5.0",
		"next": "16.0.10",
		"pdfkit": "^0.15.0",
		"react-day-picker": "^9.11.1",
		"react-dropzone": "^14.4.0",
		"react-hot-toast": "^2.4.1",
		"ssh2-sftp-client": "^11.0.0",
		"storyblok-rich-text-react-renderer": "~3.0.1",
		"stripe": "^17.1.0",
		"survey-core": "^1.12.4",
		"survey-react-ui": "^1.12.4",
		"swissqrbill": "^4.1.2",
		"tailwind-merge": "^2.6.0",
		"tmp-promise": "^3.0.3",
		"twilio": "^5.6.1",
		"usehooks-ts": "^3.1.0",
		"xpath": "^0.0.34"
	},
	"devDependencies": {
		"@playwright/test": "^1.57.0",
		"@types/accept-language-parser": "^1.5.6",
		"@types/jest": "^30.0.0",
		"@types/lodash": "^4.17.21",
		"@types/luxon": "^3.4.2",
		"@types/node": "^22.7.4",
		"@types/pdfkit": "^0.17.3",
		"@types/ssh2-sftp-client": "^9.0.4",
		"@types/vimeo__player": "^2.18.3",
		"autoprefixer": "^10.4.20",
		"eslint": "^9",
		"eslint-config-next": "16.0.7",
		"jest": "^29.7.0",
		"knip": "^5.72.0",
		"next-openapi-gen": "^0.8.9",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.47",
		"storyblok": "^4.12.1",
		"tailwindcss": "^3.4.13",
		"ts-jest": "^29.2.5",
		"tsx": "^4.20.3",
		"typescript": "^5.6.2",
		"prisma": "7.3.0"
	},
	"prisma": {
		"seed": "tsx src/lib/database/seed/seed.ts"
	}
}
