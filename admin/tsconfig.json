{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"lib": ["dom", "es2020"],
		"module": "esnext",
		"moduleResolution": "node",
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"strict": true,
		"sourceMap": true,
		"target": "es2021",
		"types": ["jest", "node"]
	},
	"include": ["vite.config.ts", "src/**/*"]
}
