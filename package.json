{
	"name": "@socialincome/monorepo",
	"version": "1.0.0",
	"private": true,
	"engines": {
		"node": "22"
	},
	"workspaces": [
		"ui",
		"website"
	],
	"type": "module",
	"scripts": {
		"postinstall": "npm run db:generate",
		"firebase:export": "firebase emulators:export --project demo-social-income-local --force ./seed",
		"firebase:serve": "firebase emulators:start --project demo-social-income-local --config firebase.json --import ./seed",
		"format-code": "prettier --write .",
		"website:build-paths": "npm --workspace=@socialincome/website run build-paths",
		"website:build": "npm --workspace=@socialincome/website run build",
		"website:build:emulator": "npm --workspace=@socialincome/website run build:emulator",
		"website:lint": "npm --workspace=@socialincome/website run lint",
		"website:check:unused": "npm --workspace=@socialincome/website run check:unused",
		"website:serve": "npm run db:generate && npm run db:migrate:deploy && npm --workspace=@socialincome/website run serve",
		"website:serve:emulator": "npm --workspace=@socialincome/website run serve:emulator",
		"website:start": "npm --workspace=@socialincome/website run start",
		"website:start:emulator": "npm --workspace=@socialincome/website run start:emulator",
		"website:test:unit": "npm --workspace=@socialincome/website run test:unit",
		"website:extract-translations": "npm --workspace=@socialincome/website run extract-translations",
		"website:check-translations": "npm --workspace=@socialincome/website run check-translations",
		"ui:serve": "npm --workspace=@socialincome/ui run storybook",
		"ui:build": "npm --workspace=@socialincome/ui run build-storybook",
		"dev:ssl-proxy": "ssl-proxy --source 3001 --target 3000",
		"db:generate": "npm --workspace=@socialincome/website run db:generate",
		"db:migrate:deploy": "npm --workspace=@socialincome/website run db:migrate:deploy",
		"db:migrate:dev": "npm --workspace=@socialincome/website run db:migrate:dev",
		"db:migrate:reset": "npm --workspace=@socialincome/website run db:migrate:reset",
		"db:migrate:status": "npm --workspace=@socialincome/website run db:migrate:status",
		"db:migrate:create": "npm --workspace=@socialincome/website run db:migrate:create",
		"db:introspect": "npm --workspace=@socialincome/website run db:introspect",
		"db:seed": "npm --workspace=@socialincome/website run db:seed",
		"db:studio": "npm --workspace=@socialincome/website run db:studio",
		"db:up": "npm --workspace=@socialincome/website run db:up",
		"db:down": "npm --workspace=@socialincome/website run db:down",
		"mockserver:up": "npm --workspace=@socialincome/website run mockserver:up",
		"mockserver:down": "npm --workspace=@socialincome/website run mockserver:down",
		"typecheck": "npm run typecheck:all",
		"typecheck:all": "npm run typecheck --workspaces --if-present"
	},
	"devDependencies": {
		"@types/react": "19.2.14",
		"firebase-tools": "15.6.0",
		"prettier": "3.8.1",
		"prettier-plugin-organize-imports": "4.3.0",
		"prettier-plugin-tailwindcss": "0.7.2",
		"ssl-proxy": "1.0.3",
		"typescript": "5.9.3"
	},
	"dependencies": {
		"@radix-ui/react-slider": "^1.3.6",
		"@xstate/react": "^6.0.0",
		"glob": "^11.0.3",
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"xstate": "^5.28.0",
		"zod": "^3.23.8"
	}
}
