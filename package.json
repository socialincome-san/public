{
	"name": "@socialincome/monorepo",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"admin",
		"functions",
		"shared",
		"ui",
		"website"
	],
	"scripts": {
		"admin:build": "$npm_execpath --workspace=@socialincome/admin run build",
		"admin:serve": "$npm_execpath run functions:build && $npm_execpath --workspace=@socialincome/admin run serve",
		"admin:test": "$npm_execpath --workspace=@socialincome/admin run test:emulator",
		"admin:test:playwright": "$npm_execpath --workspace=@socialincome/admin run test:playwright:emulator",
		"admin:test:playwright:update": "$npm_execpath --workspace=@socialincome/admin run test:playwright:emulator:update",
		"firebase:export": "firebase emulators:export --project social-income-staging --force ./seed",
		"firebase:serve": "firebase emulators:start --project social-income-staging --config firebase.json --import ./seed",
		"format-code": "prettier --write .",
		"functions:build": "$npm_execpath --workspace=@socialincome/functions run build",
		"functions:deploy": "$npm_execpath --workspace=@socialincome/functions run deploy",
		"functions:serve": "$npm_execpath --workspace=@socialincome/functions run serve",
		"functions:serve:watch": "$npm_execpath --workspace=@socialincome/functions run serve:watch",
		"functions:test": "$npm_execpath --workspace=@socialincome/functions run test",
		"functions:test:playwright": "$npm_execpath --workspace=@socialincome/functions run test:playwright",
		"functions:test:playwright:update": "$npm_execpath --workspace=@socialincome/functions run test:playwright:update",
		"shared:test": "$npm_execpath --workspace=@socialincome/shared run test",
		"ui:build": "$npm_execpath --workspace=@socialincome/ui run build",
		"ui:serve": "$npm_execpath --workspace=@socialincome/ui run serve",
		"website:build": "$npm_execpath --workspace=@socialincome/website run build",
		"website:build:emulator": "$npm_execpath --workspace=@socialincome/website run build:emulator",
		"website:serve": "$npm_execpath --workspace=@socialincome/website run serve",
		"website:serve:emulator": "$npm_execpath --workspace=@socialincome/website run serve:emulator",
		"website:start": "$npm_execpath --workspace=@socialincome/website run start",
		"website:start:emulator": "$npm_execpath --workspace=@socialincome/website run start:emulator",
		"website:test": "$npm_execpath --workspace=@socialincome/website run test",
		"website:test:emulator": "$npm_execpath --workspace=@socialincome/website run test:emulator",
		"website:test:e2e": "$npm_execpath --workspace=@socialincome/website run test:e2e",
		"website:test:e2e:emulator": "$npm_execpath --workspace=@socialincome/website run test:e2e:emulator",
		"website:test:e2e:update": "$npm_execpath --workspace=@socialincome/website run test:e2e:update",
		"website:test:e2e:update:emulator": "$npm_execpath --workspace=@socialincome/website run test:e2e:update:emulator",
		"website:extract-translations": "$npm_execpath --workspace=@socialincome/website run extract-translations",
		"website:check-translations": "$npm_execpath --workspace=@socialincome/website run check-translations"
	},
	"devDependencies": {
		"firebase-tools": "11.29.1",
		"prettier": "^2.8.4",
		"prettier-plugin-organize-imports": "^3.2.2"
	}
}
