{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": ["es2022"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"target": "es2022",
		"types": ["jest", "node"]
	},
	"include": ["src/**/*", "tests/**/*"]
}
